    "from manim import *\n",
    "import numpy as np\n",
    "from shapely.geometry import Polygon as ShapelyPolygon\n",
    "from shapely.affinity import rotate as shapely_rotate\n",
    "\n",
    "# ---------- 可调参数 ----------\n",
    "R = 1.5  # 约束半径\n",
    "ELLIPSE_AXES = (3.0, 1.6)\n",
    "ELLIPSE_ROT = 20 * DEGREES\n",
    "ELLIPSE_BASE_CENTER = np.array([1.8, 1.2, 0])\n",
    "UNREG_SHIFT = np.array([0.5, 0.5, 0])  # 黄点偏移\n",
    "DOWN_SHIFT = 2  # 整体下移量\n",
    "\n",
    "# ---------- 辅助函数 ----------\n",
    "def make_axes(range_size=4.0):\n",
    "    ax = Axes(\n",
    "        x_range=[-range_size, range_size, 1],\n",
    "        y_range=[-range_size, range_size, 1],\n",
    "        x_length=2 * range_size,\n",
    "        y_length=2 * range_size,\n",
    "        tips=True,\n",
    "        axis_config=dict(stroke_width=2),\n",
    "    )\n",
    "    labels = VGroup(\n",
    "        MathTex(r\"w_1\").next_to(ax.x_axis.get_end(), RIGHT),\n",
    "        MathTex(r\"w_2\").next_to(ax.y_axis.get_end(), UP),\n",
    "    )\n",
    "    return ax, labels\n",
    "\n",
    "def make_l2_ball(radius=R, color=BLUE, fill_alpha=0.2):\n",
    "    c = Circle(radius=radius)\n",
    "    c.set_stroke(color=color, width=4)\n",
    "    c.set_fill(color, opacity=fill_alpha)\n",
    "    return c\n",
    "\n",
    "def make_l1_diamond(radius=R, color=RED, fill_alpha=0.2):\n",
    "    diamond = Polygon(\n",
    "        [radius, 0, 0],\n",
    "        [0, radius, 0],\n",
    "        [-radius, 0, 0],\n",
    "        [0, -radius, 0],\n",
    "    )\n",
    "    diamond.set_stroke(color=color, width=4)\n",
    "    diamond.set_fill(color, opacity=fill_alpha)\n",
    "    return diamond\n",
    "\n",
    "def make_ellipse(level=1.0, center=None, axes=ELLIPSE_AXES, rot=ELLIPSE_ROT, dashed=True):\n",
    "    if center is None:\n",
    "        center = np.array([0, 0, 0])\n",
    "    a, b = axes\n",
    "    def param(t):\n",
    "        x = a * level * np.cos(t)\n",
    "        y = b * level * np.sin(t)\n",
    "        xr = x * np.cos(rot) - y * np.sin(rot)\n",
    "        yr = x * np.sin(rot) + y * np.cos(rot)\n",
    "        return np.array([xr, yr, 0]) + center\n",
    "    curve = ParametricFunction(param, t_range=[0, TAU], use_smoothing=True)\n",
    "    curve.set_stroke(width=2, color=YELLOW)\n",
    "    if dashed:\n",
    "        curve = DashedVMobject(curve, num_dashes=50, dashed_ratio=0.6)\n",
    "    return curve\n",
    "\n",
    "def make_center_dot(base_center=ELLIPSE_BASE_CENTER):\n",
    "    center = base_center + UNREG_SHIFT\n",
    "    dot = Dot(center, radius=0.06, color=YELLOW)\n",
    "    label = MathTex(r\"w^*_{\\operatorname{unreg}}\", color=YELLOW).scale(0.6)\n",
    "    label.next_to(dot, UR, buff=0.25)\n",
    "    return VGroup(dot, label), center\n",
    "\n",
    "# ---------- 椭圆多边形 ----------\n",
    "def ellipse_polygon(a, b, rot, center, n=720):\n",
    "    theta = np.linspace(0, 2 * np.pi, n)\n",
    "    pts = [(a * np.cos(t), b * np.sin(t)) for t in theta]\n",
    "    poly = ShapelyPolygon(pts)\n",
    "    poly = shapely_rotate(poly, rot * 180 / np.pi, origin=(0, 0))\n",
    "    pts = [(x + center[0], y + center[1]) for x, y in poly.exterior.coords]\n",
    "    return ShapelyPolygon(pts)\n",
    "\n",
    "def circle_polygon(R, n=720):\n",
    "    theta = np.linspace(0, 2 * np.pi, n)\n",
    "    pts = [(R * np.cos(t), R * np.sin(t)) for t in theta]\n",
    "    return ShapelyPolygon(pts)\n",
    "\n",
    "def diamond_polygon(R):\n",
    "    return ShapelyPolygon([(R,0), (0,R), (-R,0), (0,-R)])\n",
    "\n",
    "# ---------- 椭圆放大直到边缘触碰约束 ----------\n",
    "def ellipse_scale_to_touch_circle(center, a, b, rot, R, steps=1000):\n",
    "    for level in np.linspace(0.01, 2.0, steps):\n",
    "        ell = ellipse_polygon(a*level, b*level, rot, center)\n",
    "        cir = circle_polygon(R)\n",
    "        if not ell.intersection(cir).is_empty:\n",
    "            return level\n",
    "    return 1.0\n",
    "\n",
    "def ellipse_scale_to_touch_diamond(center, a, b, rot, R, steps=1000):\n",
    "    for level in np.linspace(0.01, 2.0, steps):\n",
    "        ell = ellipse_polygon(a*level, b*level, rot, center)\n",
    "        dia = diamond_polygon(R)\n",
    "        if not ell.intersection(dia).is_empty:\n",
    "            return level\n",
    "    return 1.0\n",
    "\n",
    "# ---------- 精确交点 ----------\n",
    "def ellipse_touch_circle_point(center, a, b, rot, R, steps=1000):\n",
    "    scale = ellipse_scale_to_touch_circle(center, a, b, rot, R, steps)\n",
    "    ell = ellipse_polygon(a*scale, b*scale, rot, center)\n",
    "    cir = circle_polygon(R)\n",
    "    inter = ell.intersection(cir)\n",
    "    pts = np.array(inter.exterior.coords)\n",
    "    dists = np.linalg.norm(pts - center[:2], axis=1)\n",
    "    p = pts[np.argmin(dists)]\n",
    "    return np.array([p[0], p[1], 0])\n",
    "\n",
    "def ellipse_touch_diamond_point(center, a, b, rot, R, steps=1000):\n",
    "    scale = ellipse_scale_to_touch_diamond(center, a, b, rot, R, steps)\n",
    "    ell = ellipse_polygon(a*scale, b*scale, rot, center)\n",
    "    dia = diamond_polygon(R)\n",
    "    inter = ell.intersection(dia)\n",
    "    pts = np.array(inter.exterior.coords)\n",
    "    dists = np.linalg.norm(pts - center[:2], axis=1)\n",
    "    p = pts[np.argmin(dists)]\n",
    "    return np.array([p[0], p[1], 0])\n",
    "\n",
    "# ---------- 动画 Scene ----------\n",
    "class SideBySideCompare(Scene):\n",
    "    def construct(self):\n",
    "\n",
    "        # ---------- 先展示 L1/L2 公式 ----------\n",
    "        l1_formula = MathTex(\n",
    "            r\"L1:\\; J(w) \\;=\; \", \n",
    "            r\"\\mathcal{L}(y,\\hat{y})\", \n",
    "            r\"\\;+\\;\", \n",
    "            r\"\\big[\\,|w_1| + |w_2| + |w_3| + \\cdots\\,\\big]\"\n",
    "        ).scale(1.2)\n",
    "        l2_formula = MathTex(\n",
    "            r\"L2:\\; J(w) \\;=\; \", \n",
    "            r\"\\mathcal{L}(y,\\hat{y})\", \n",
    "            r\"\\;+\\;\", \n",
    "            r\"\\big[\\,w_1^2 + w_2^2 + w_3^2 + \\cdots\\,\\big]\"\n",
    "        ).scale(1.2)\n",
    "        # 分段上色\n",
    "        l1_formula[1].set_color(GREEN_D)  # 损失函数\n",
    "        l1_formula[3].set_color(RED_D)    # 正则项\n",
    "        l2_formula[1].set_color(GREEN_D)\n",
    "        l2_formula[3].set_color(RED_D)\n",
    "        # 组合公式\n",
    "        formulas = VGroup(l1_formula, l2_formula).arrange(DOWN, aligned_edge=LEFT, buff=1.5)\n",
    "        formulas.to_edge(UP).shift(DOWN*2)\n",
    "        # 下划线和文字标注\n",
    "        # 损失函数下划线\n",
    "        loss_line = VGroup(\n",
    "            Underline(l1_formula[1], buff=0.1, color=GREEN_D),\n",
    "            Underline(l2_formula[1], buff=0.1, color=GREEN_D)\n",
    "        )\n",
    "        loss_text = Text(\"损失函数\", font=\"Microsoft YaHei\", color=GREEN_D).next_to(loss_line, UP, buff=0.1).shift(DOWN*1.25)\n",
    "\n",
    "        # 正则项下划线\n",
    "        reg_line = VGroup(\n",
    "            Underline(l1_formula[3], buff=0.1, color=RED_D),\n",
    "            Underline(l2_formula[3], buff=0.1, color=RED_D)\n",
    "        )\n",
    "        reg_text = Text(\"正则项\", font=\"Microsoft YaHei\", color=RED_D).next_to(reg_line, UP, buff=0.1).shift(DOWN*1.25+LEFT*0.5)\n",
    "        # ---------- 动画 ----------\n",
    "        self.play(Write(l1_formula))\n",
    "        self.play(Write(l2_formula))\n",
    "        self.wait(1)\n",
    "        self.play(Create(loss_line), Write(loss_text))\n",
    "        self.wait(1)\n",
    "        self.play(Create(reg_line), Write(reg_text))\n",
    "        self.wait(5)\n",
    "        self.play(FadeOut(formulas, loss_line, loss_text, reg_line, reg_text))\n",
    "        self.wait(1)\n",
    "\n",
    "        # ---------- L2 单独 ----------\n",
    "        ax, labels = make_axes()\n",
    "        l2_ball = make_l2_ball(R, color=BLUE_D, fill_alpha=0.25)\n",
    "        info = Text(\"L2 正则化（Ridge）\", color=BLUE_D).scale(0.7).to_corner(UL)\n",
    "        cgroup, new_center = make_center_dot()\n",
    "        ellipse = make_ellipse(level=0.01, center=new_center)\n",
    "        target_scale = ellipse_scale_to_touch_circle(new_center, ELLIPSE_AXES[0], ELLIPSE_AXES[1], ELLIPSE_ROT, R)\n",
    "        touch = ellipse_touch_circle_point(new_center, ELLIPSE_AXES[0], ELLIPSE_AXES[1], ELLIPSE_ROT, R)\n",
    "        sol = Dot(touch, color=GREEN, radius=0.065)\n",
    "        sol_lb = MathTex(r\"w^{\\*}_{\\operatorname{ridge}}\", color=GREEN).scale(0.6)\n",
    "        sol_lb.next_to(sol, DOWN if touch[1] > 0 else UP, buff=0.15)\n",
    "        line = DashedLine(new_center, touch, stroke_width=2)\n",
    "\n",
    "        l2_group = VGroup(ax, labels, l2_ball, info, cgroup, ellipse, line, sol, sol_lb)\n",
    "        l2_group.shift(DOWN*DOWN_SHIFT)\n",
    "\n",
    "        self.play(Create(ax), Write(labels))\n",
    "        self.play(Create(l2_ball))\n",
    "        self.play(FadeIn(info))\n",
    "        self.play(FadeIn(cgroup))\n",
    "        self.add(ellipse)\n",
    "        self.play(ellipse.animate.scale(target_scale/0.01), run_time=3)\n",
    "        self.play(Create(line))\n",
    "        self.play(FadeIn(sol), Write(sol_lb))\n",
    "        self.wait(1)\n",
    "        self.clear()\n",
    "        self.wait(1)\n",
    "\n",
    "        # ---------- L1 单独 ----------\n",
    "        ax, labels = make_axes()\n",
    "        diamond = make_l1_diamond(R, color=RED_D, fill_alpha=0.25)\n",
    "        info = Text(\"L1 正则化（Lasso）\", color=RED_D).scale(0.7).to_corner(UL)\n",
    "        cgroup, new_center = make_center_dot()\n",
    "        ellipse = make_ellipse(level=0.01, center=new_center)\n",
    "        target_scale = ellipse_scale_to_touch_diamond(new_center, ELLIPSE_AXES[0], ELLIPSE_AXES[1], ELLIPSE_ROT, R)\n",
    "        touch = ellipse_touch_diamond_point(new_center, ELLIPSE_AXES[0], ELLIPSE_AXES[1], ELLIPSE_ROT, R)\n",
    "        sol = Dot(touch, color=GREEN, radius=0.065)\n",
    "        sol_lb = MathTex(r\"w^{\\*}_{\\operatorname{lasso}}\", color=GREEN).scale(0.6)\n",
    "        sol_lb.next_to(sol, DOWN if touch[1] > 0 else UP, buff=0.15)\n",
    "        line = DashedLine(new_center, touch, stroke_width=2)\n",
    "\n",
    "        l1_group = VGroup(ax, labels, diamond, info, cgroup, ellipse, line, sol, sol_lb)\n",
    "        l1_group.shift(DOWN*DOWN_SHIFT)\n",
    "\n",
    "        self.play(Create(ax), Write(labels))\n",
    "        self.play(Create(diamond))\n",
    "        self.play(FadeIn(info))\n",
    "        self.play(FadeIn(cgroup))\n",
    "        self.add(ellipse)\n",
    "        self.play(ellipse.animate.scale(target_scale/0.01), run_time=3)\n",
    "        self.play(Create(line))\n",
    "        self.play(FadeIn(sol), Write(sol_lb))\n",
    "        self.wait(1)\n",
    "        self.clear()\n",
    "        self.wait(1)\n",
    "\n",
    "        # ---------- 并列 L2 vs L1 ----------\n",
    "        # L2\n",
    "        axL, labelsL = make_axes()\n",
    "        l2_ball = make_l2_ball(R, color=BLUE_D, fill_alpha=0.25)\n",
    "        infoL = Text(\"L2 Ridge\", color=BLUE_D).scale(0.6).to_corner(UL)\n",
    "        cgroupL, centerL = make_center_dot()\n",
    "        ellipseL = make_ellipse(level=0.01, center=centerL, rot=80*DEGREES)\n",
    "        target_scaleL = ellipse_scale_to_touch_circle(centerL, ELLIPSE_AXES[0], ELLIPSE_AXES[1], 80*DEGREES, R)  \n",
    "        touchL = ellipse_touch_circle_point(centerL, ELLIPSE_AXES[0], ELLIPSE_AXES[1], 80*DEGREES, R)      \n",
    "        solL = Dot(touchL, color=GREEN, radius=0.065)\n",
    "        solLbL = MathTex(r\"w^{\\*}_{ridge}\", color=GREEN).scale(0.5).next_to(solL, DOWN, buff=0.15)\n",
    "        lineL = DashedLine(centerL, touchL, stroke_width=2)       # 左侧 L2 上方标注\n",
    "        groupL = VGroup(axL, labelsL, l2_ball, infoL, cgroupL, ellipseL, lineL, solL, solLbL)\n",
    "        groupL.shift(LEFT*4+DOWN*2).scale(0.8)   # 左边整体缩小\n",
    "\n",
    "        # L1\n",
    "        axR, labelsR = make_axes()\n",
    "        diamondR = make_l1_diamond(R, color=RED_D, fill_alpha=0.25)\n",
    "        infoR = Text(\"L1 Lasso\", color=RED_D).scale(0.6).to_corner(UR)\n",
    "        cgroupR, centerR = make_center_dot()\n",
    "        ellipseR = make_ellipse(level=0.01, center=centerR, rot=80*DEGREES)\n",
    "        target_scaleR = ellipse_scale_to_touch_diamond(centerR, ELLIPSE_AXES[0], ELLIPSE_AXES[1], 80*DEGREES, R)\n",
    "        touchR = ellipse_touch_diamond_point(centerR, ELLIPSE_AXES[0], ELLIPSE_AXES[1], 80*DEGREES, R)          \n",
    "        solR = Dot(touchR, color=GREEN, radius=0.065)\n",
    "        solLbR = MathTex(r\"w^{\\*}_{lasso}\", color=GREEN).scale(0.5).next_to(solR, DOWN, buff=0.15)\n",
    "        lineR = DashedLine(centerR, touchR, stroke_width=2)\n",
    "        groupR = VGroup(axR, labelsR, diamondR, infoR, cgroupR, ellipseR, lineR, solR, solLbR)\n",
    "        groupR.shift(RIGHT*3+DOWN*2).scale(0.8)   # 右边整体缩小\n",
    "\n",
    "\n",
    "        labelL = Text(\"L2\", font_size=60, color=BLUE_D)\n",
    "        labelL.move_to(UP).shift(UP*1.5+LEFT*4.2)\n",
    "        labelR = Text(\"L1\", font_size=60, color=RED_D)\n",
    "        labelR.move_to(UP).shift(UP*1.5+RIGHT*3.4)\n",
    "\n",
    "        self.play(Create(axL), Write(labelsL), Create(axR), Write(labelsR))\n",
    "        self.play(Create(l2_ball), Create(diamondR), Write(labelL), Write(labelR))\n",
    "        self.play(FadeIn(infoL), FadeIn(infoR))\n",
    "        self.play(FadeIn(cgroupL), FadeIn(cgroupR))\n",
    "        self.add(ellipseL, ellipseR)\n",
    "        self.play(\n",
    "            ellipseL.animate.scale(target_scaleL/0.01),\n",
    "            ellipseR.animate.scale(target_scaleR/0.01),\n",
    "            run_time=3\n",
    "        )\n",
    "        self.play(Create(lineL), Create(lineR))\n",
    "        self.play(FadeIn(solL), Write(solLbL), FadeIn(solR), Write(solLbR))\n",
    "        self.wait(2)\n",
    "        # ---------- 接着在 80° 后旋转 ----------\n",
    "        for deg in range(84, 361, 4):   # 从84°继续，每次加4°\n",
    "            rot_angle = deg * DEGREES\n",
    "\n",
    "            # L2 椭圆\n",
    "            scaleL = ellipse_scale_to_touch_circle(centerL, ELLIPSE_AXES[0], ELLIPSE_AXES[1], rot_angle, R)\n",
    "            ellipseL_new = make_ellipse(level=scaleL, center=centerL, rot=rot_angle)\n",
    "            ellipseL_new.shift(LEFT*4.57+DOWN*2.3).scale(0.8)\n",
    "            touchL = ellipse_touch_circle_point(centerL, ELLIPSE_AXES[0], ELLIPSE_AXES[1], rot_angle, R)\n",
    "            solL_new = Dot(touchL, color=GREEN, radius=0.065).shift(LEFT*4.42+DOWN*2.21).scale(0.8)\n",
    "            lineL_new = DashedLine(centerL, touchL, stroke_width=2).shift(LEFT*4.5+DOWN*2.23).scale(0.8)\n",
    "\n",
    "            # L1 椭圆\n",
    "            scaleR = ellipse_scale_to_touch_diamond(centerR, ELLIPSE_AXES[0], ELLIPSE_AXES[1], rot_angle, R)\n",
    "            ellipseR_new = make_ellipse(level=scaleR, center=centerR, rot=rot_angle)\n",
    "            ellipseR_new.shift(RIGHT*2.77+DOWN*2.2).scale(0.8)\n",
    "            touchR = ellipse_touch_diamond_point(centerR, ELLIPSE_AXES[0], ELLIPSE_AXES[1], rot_angle, R)\n",
    "            solR_new = Dot(touchR, color=GREEN, radius=0.065).shift(RIGHT*3+DOWN*2).scale(0.8)\n",
    "            lineR_new = DashedLine(centerR, touchR, stroke_width=2).shift(RIGHT*2.95+DOWN*2.1).scale(0.82)\n",
    "\n",
    "            # 动画过渡\n",
    "            self.play(\n",
    "                ReplacementTransform(ellipseL, ellipseL_new),\n",
    "                ReplacementTransform(solL, solL_new),\n",
    "                ReplacementTransform(lineL, lineL_new),\n",
    "                ReplacementTransform(ellipseR, ellipseR_new),\n",
    "                ReplacementTransform(solR, solR_new),\n",
    "                ReplacementTransform(lineR, lineR_new),\n",
    "                run_time=0.2\n",
    "            )\n",
    "            # 更新引用\n",
    "            ellipseL, solL, lineL = ellipseL_new, solL_new, lineL_new\n",
    "            ellipseR, solR, lineR = ellipseR_new, solR_new, lineR_new\n",
    "\n",
    "        self.wait(2)\n",
    "\n",
    "        # ---------- 黑屏 ----------\n",
    "        self.play(*[FadeOut(mob) for mob in self.mobjects])\n",
    "        self.wait(1)\n",
    "        # --------- 再次写出 L1/L2 公式 ----------\n",
    "        l1_formula1 = MathTex(\n",
    "            r\"L1:\\; J(w) \\;=\; \", \n",
    "            r\"\\mathcal{L}(y,\\hat{y})\", \n",
    "            r\"\\;+\\;\", \n",
    "            r\"\\big[\\,|w_1| + |w_2| + |w_3| + \\cdots\\,\\big]\"\n",
    "        ).scale(1.15)\n",
    "        l2_formula1 = MathTex(\n",
    "            r\"L2:\\; J(w) \\;=\; \", \n",
    "            r\"\\mathcal{L}(y,\\hat{y})\", \n",
    "            r\"\\;+\\;\", \n",
    "            r\"\\big[\\,w_1^2 + w_2^2 + w_3^2 + \\cdots\\,\\big]\"\n",
    "        ).scale(1.15)\n",
    "        # 分段上色\n",
    "        l1_formula1[1].set_color(GREEN_D)\n",
    "        l1_formula1[3].set_color(RED_D)\n",
    "        l2_formula1[1].set_color(GREEN_D)\n",
    "        l2_formula1[3].set_color(RED_D)\n",
    "        # lambda 符号对象（初始不显示）\n",
    "        lambda_l11 = MathTex(r\"\\lambda \").scale(1.7).set_color(GOLD_D)\n",
    "        lambda_l21 = MathTex(r\"\\lambda \").scale(1.7).set_color(GOLD_D)\n",
    "        # 组合公式\n",
    "        formulas1 = VGroup(l1_formula1, l2_formula1).arrange(DOWN, aligned_edge=LEFT, buff=1.5)\n",
    "        formulas1.to_edge(UP).shift(DOWN*2.5+LEFT*0.25)\n",
    "        reg_text1 = Text(\"正则项\", font=\"Microsoft YaHei\", color=RED_D).next_to(l1_formula1, UP, buff=0.1).shift(DOWN*1.85+RIGHT*3.15)\n",
    "        ttt = Text(\"正则项参数\", font=\"Microsoft YaHei\", color=GOLD_D).next_to(l1_formula1, UP, buff=0.1).shift(DOWN*1.85)\n",
    "        tttt = Text(\"超参数\", font=\"Microsoft YaHei\", color=GOLD_B).next_to(l1_formula1, UP, buff=0.1).shift(UP*1.0).scale(1.7)\n",
    "        # ---------- 动画 ----------\n",
    "        self.play(FadeIn(l1_formula1, l2_formula1))\n",
    "        self.wait(2)\n",
    "        self.play(Write(reg_text1))\n",
    "        self.wait(3)\n",
    "        # 红色正则项往右移\n",
    "        self.play(\n",
    "            l1_formula1[3].animate.shift(RIGHT*0.45),\n",
    "            l2_formula1[3].animate.shift(RIGHT*0.45),\n",
