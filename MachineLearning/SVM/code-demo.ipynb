    "from manim import (\n",
    "    ThreeDScene, Axes, VGroup, Dot, FadeIn, FadeOut, Create, ValueTracker,\n",
    "    always_redraw, Line, YELLOW, RED, BLUE, WHITE, Surface, ThreeDAxes, Dot3D,\n",
